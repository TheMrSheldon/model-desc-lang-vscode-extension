{
  "name": "mdl-language-server",
  "displayName": "mdl-language-server",
  "description": "Language server for the model description language (mdl)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/client.js",
  "contributes": {
    "languages": [
      {
        "id": "model-desc-lang",
        "extensions": [
          ".dlm"
        ],
        "configuration": "./src/syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "model-desc-lang",
        "scopeName": "source.model-desc-lang",
        "path": "./src/syntaxes/model-desc-lang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mdl-language-server.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
